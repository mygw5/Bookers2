<div class="continer px-5 mx-0">
  <div class="row">
    <%= render '/books/newform', book: @book, user: @user %>


  <div class="col-8 pl-5">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
       <% @users.each do |user| %>
          <tr>
            <th><%= image_tag user.profile_image, size: "80x80" %></th>
            <th><%= user.name %></th>
            <th><%= link_to 'Show', user_path(user.id) %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>