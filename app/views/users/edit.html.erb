<div class="continer">
  <div class="row">
    <div class="col-8 px-5 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error-message">
          <h2 class="error-message-comment"><%= pluralize(@user.errors.count,"error") %> prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |messege| %>
              <li><%= messege %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <lanel for="inputName">Name</lanel>
          <%= f.text_field :name, autofocus: true, id: "inputName", class: "form-control" %>
        </div>
        <div class="form-group">
        <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file" %>
        </div>
        <div class="form-group">
          <label>Introduction</label>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>