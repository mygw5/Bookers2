<div class="continer px-5 mx-0">
  <div class="row">
    <%= render '/books/newform', book: @newbook, user: @user %>
    <div class="col-8 pl-5">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
          <% @books.each do |book| %>
          <tr>
            <th><%= image_tag @user.get_profile_image(80,80) %></th>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
          <% end %>
          </tr>
      </table>
    </div>
  </div>
</div>