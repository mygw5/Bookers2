<div class="container">
  <div class="row">
    <div class="col-11 mx-auto">
      <div class="container">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div>
          <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>
        <div>
        <%= link_to "Show", book_path(@book.id) %>
        &#124;
        <%= link_to "Back", "/books" %>
        </div>
      </div>
    </div>
  </div>
</div>