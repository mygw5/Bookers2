<%= render 'newform', book: @book %>


<div class="row">
<div class="col-8 px-5 mx-auto">
  <h2>Books</h2>
  
  <table class="table">
    <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>
    
    <% @books.each do |book| %>
    <tbody>
    
    <tr>
      <td><!--%= image_tag 'no-image.jpg' %--></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
