<div class="continer px-5 mx-0">
  <div class="row">
    <%= render 'newform', book: @newbook, user: @user %>
    <div class="col-8 pl-5">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>

          <tr>
            <td><%= image_tag @user.profile_image, size: "100x100" %><br>
            <%= link_to @user.name,user_path(@user.id) %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</div>
